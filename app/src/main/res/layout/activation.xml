<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/photo_fond">

        <ImageView
            android:id="@+id/activationIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/partybay"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/activationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activationIV"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:text="Tu viens de recevoir un code d'activation par SMS. Merci de l'entrer dans le champ ci dessous"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <Button
            android:id="@+id/activation_button"
            android:layout_below="@id/activationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renvoyer le"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@null"/>

        <LinearLayout
            android:id="@+id/activation_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:layout_below="@id/activation_button">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mdp"/>
            <EditText
                android:id="@+id/activation_code"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/icone_transparent"
                android:background="@drawable/edit_text"
                android:hint="Code de validation"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/activation_button_valider"
            android:layout_below="@id/activation_LinearLayout"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="90px"
            android:background="@drawable/round_dark_button"
            android:textColor="#FFFFFF"
            android:text="Valider"/>


        </RelativeLayout>
</LinearLayout>