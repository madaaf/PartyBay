<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="640px"
        android:background="@drawable/photo_fond">

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:background="@drawable/cercle"/>

        <TextView
            android:id="@+id/profile_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/profile_photo"
            android:layout_centerHorizontal="true"
            android:textSize="47px"
            android:textStyle="bold"
            android:text="Claire, 23 "/>

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30px"
            android:layout_below="@id/profile_pseudo"
            android:text="Voici une courte description de mon profil blabla blaednjke..."/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



            </TableRow>

        </RelativeLayout>


</RelativeLayout>